go_binary {
  // Module (and output) name.
  name: "bood",

  // Go package to build.
  pkg: "github.com/roman-mazur/bood/cmd/bood",

  // Build inputs.
  srcs: ["**/*.go", "go.mod"],
  srcsExclude: ["vendor/**/*", "blueprint/**/*"],

  // Flag to also perform dependencies vendoring.
  vendorFirst: true
}
